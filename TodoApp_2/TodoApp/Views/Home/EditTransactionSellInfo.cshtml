@model TodoApp.Models.TransactionInfo

@{
    ViewBag.Title = "EditTransactionSellInfo";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<style>
    body {
        color: #000000;
        background-color: #FFFFFF;
        background-image: url("../../image/gazou3.jpg");
    }
</style>
<h2>売付情報登録</h2>
<link rel="stylesheet" href="../../Style/Defalut.date.css">
<link rel="stylesheet" href="../../Style/Defalut.css">
<script type="text/javascript" src="../../Scripts/jquery-1.10.2.js"></script>
<script type="text/javascript" src="../../Scripts/picker.js"></script>
<script type="text/javascript" src="../../Scripts/picker.date.js"></script>
<script type="text/javascript" src="../../Scripts/legacy.js"></script>
<script type="text/javascript" src="../../Scripts/ja_JP.js"></script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>売付情報入力</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TransactionTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TransactionTitle, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.TransactionTitle, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ToushouCode, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ToushouCode, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.ToushouCode, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PurchaseFund, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PurchaseFund, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.PurchaseFund, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TransactionFund, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TransactionFund, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TransactionFund, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PurchaseCount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PurchaseCount, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.PurchaseCount, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TransactionCount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TransactionCount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TransactionCount, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PurchaseDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PurchaseDate, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.PurchaseDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TransactionDate, htmlAttributes: new { @class = "control-label col-md-2 text-danger" })
            <div class="col-md-10">
                <fieldset class="fieldset">
                    @Html.EditorFor(model => model.TransactionDate, new { htmlAttributes = new { @class = "form-control datepicker" } })
                    @Html.ValidationMessageFor(model => model.TransactionDate, "", new { @class = "text-danger" })
                </fieldset>
                <div id="container"></div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="作成" class="btn btn-default" />
                <input type="hidden" name="TransactionTitle" id="TransactionTitle" value="@Model.TransactionTitle" />
                <input type="hidden" name="ToushouCode" id="ToushouCode" value="@Model.ToushouCode" />
                <input type="hidden" name="PurchaseFund" id="PurchaseFund" value="@Model.PurchaseFund" />
                <input type="hidden" name="PurchaseDate" id="PurchaseDate" value="@Model.PurchaseDate" />
                <input type="hidden" name="PurchaseCount" id="PurchaseCount" value="@Model.PurchaseCount" />
            </div>
        </div>
    </div>
}

<div>
    <a href='@Url.Action("ViewTransactionInfo")' class="btn btn-secondary">一覧画面に戻る</a>
</div>
